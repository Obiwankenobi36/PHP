$ucenik = array("ime" => "Petar",
"prez" => "Petrić",
"god" => 23,
"adresa" => array("ulica" => "Put 7",
"pbr" => "10000",
"grad" => "Zagreb")
);

$ucenici = array();
$ucenici[] = $ucenik;

echo $ucenici[0][‘adresa’][‘grad’];

